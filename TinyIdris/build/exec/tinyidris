#!/bin/sh

case `uname -s` in            
    OpenBSD|FreeBSD|NetBSD)   
        DIR="`grealpath $0`"
        ;;                    
                              
    *)                        
        DIR="`realpath $0`" 
        ;;                    
esac                          

export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:`dirname "$DIR"`/"tinyidris_app""
"`dirname "$DIR"`"/"tinyidris_app/tinyidris.so" "$@"
